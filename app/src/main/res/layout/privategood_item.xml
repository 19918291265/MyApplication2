<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/layout_littleblue_side">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/bt_item"
        android:textSize="40dp"
        android:id="@+id/tv_item"/>
<RelativeLayout
    android:layout_width="120dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:padding="5dp">
    <Button
        android:id="@+id/bt_item_date"
        android:layout_width="100dp"
        android:layout_height="42.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:text="管理商品"
        android:background="@drawable/in_blue_round"
        android:textSize="20dp" />
    <Button
        android:id="@+id/bt_item_in"
        android:layout_width="100dp"
        android:layout_height="42.5dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bt_item_date"
        android:layout_marginRight="15dp"
        android:text="查看商品"
        android:background="@drawable/in_blue_round"
        android:textSize="20dp" />
</RelativeLayout>


</LinearLayout>